{
    "name": "create-a-github-issue",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "start": "npx ncc run ./src/index.ts",
        "test": "jest --coverage",
        "build": "npx ncc build ./src/index.ts"
    },
    "author": "Jason Etcovitch <jasonetco@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "1.10.0",
        "actions-toolkit": "6.0.1",
        "front-matter": "4.0.2",
        "js-yaml": "4.1.0",
        "nunjucks": "3.2.3",
        "nunjucks-date-filter": "0.1.1"
    },
    "devDependencies": {
        "@tsconfig/node12": "1.0.11",
        "@types/jest": "27.0.2",
        "@types/nunjucks": "3.2.1",
        "@vercel/ncc": "0.34.0",
        "jest": "27.2.3",
        "nock": "13.2.9",
        "ts-jest": "27.0.5",
        "typescript": "4.8.4"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFiles": [
            "<rootDir>/tests/setup.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "transform": {
            ".+\\.tsx?$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/tests/**/*.test.(ts|js)"
        ],
        "globals": {
            "ts-jest": {
                "babelConfig": false
            }
        }
    }
}
